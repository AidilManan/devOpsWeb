pipeline {
    agent any
    
    tools {
        maven 'maven'
    }
 
stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Archiving the artifacts'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments to tomcat server'){
            parallel{
                stage ("Deploy to Staging"){
                    steps {
                       deploy adapters: [tomcat9(credentialsId: '88d51b0c-bb63-41fc-961f-cf8eb11d916e', path: '', url: 'http://34.229.205.149:8080')], contextPath: null, war: '**/*.war'
                }
            }
        }
    }
}
