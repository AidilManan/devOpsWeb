pipeline {
    agent any
    
    tools {
        maven 'maven'
    }
 
stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Archiving the artifacts'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments to tomcat server'){
            parallel{
                stage ("Deploy to Staging"){
                    steps {
                        git branch: 'test-1.1', credentialsId: '87309fd3-2aff-463b-b75e-22614fdb7deb', url: 'https://github.com/srinu856/devop1.git'
                    }
                }
            }
        }
    }
}
