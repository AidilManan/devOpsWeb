pipeline {
    agent any
    
    tools {
        maven 'local_maven'
    }
 
stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Archiving the artifacts'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments to tomcat server'){
            parallel{
                stage ("Deploy to Staging"){
                    steps {
                        deploy adapters: [tomcat8(credentialsId: '88d51b0c-bb63-41fc-961f-cf8eb11d916e', path: '', url: 'http://3.87.146.9:8080/')], contextPath: null, war: '**/*.war'
                    }
                }
            }
        }
    }
}
